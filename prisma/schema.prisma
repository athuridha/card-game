generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

enum TodKind {
  truth
  dare
}

model Deck {
  id        String   @id
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cards Card[]

  @@index([name])
}

model Card {
  id        String   @id
  deckId    String
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)

  text      String
  category  String
  level     Int?
  kind      TodKind?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([deckId])
  @@index([category])
  @@index([kind])
}

model AdminUser {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String?  @unique
  passwordHash String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([username])
}
